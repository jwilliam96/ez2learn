generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Categories {
  id       String    @id @default(uuid())
  category String
  Courses  Courses[]
}

model Courses {
  id          String  @id @default(uuid())
  title       String
  description String
  video       String
  category    String
  rating      Float
  offer       Boolean
  sales       Int
  price       Float
  duration    String?

  // Relación
  Lessons    Lessons[]
  Categories Categories @relation(fields: [categoryId], references: [id])
  categoryId String
}

model Lessons {
  id          Int     @id @default(autoincrement())
  title       String
  link        String
  description String
  duration    String?
  documento   String?

  // Relación 
  Courses   Courses @relation(fields: [coursesId], references: [id])
  coursesId String
}
